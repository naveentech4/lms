   }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                
            }
        }
        stage('Release') {
            steps {
                echo 'Release Nexus'
            }
        }
    }
}